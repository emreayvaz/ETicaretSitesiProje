@model DataEntities.Model.Category
@using BusinessLogicLayer
@using DataEntities.Model

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    GenericRepository<Product> pRepo = new GenericRepository<Product>();
}

<h2>@Model.Name</h2>

<div class="row">
    @foreach (var item in pRepo.GetAll().Where(x=>x.CategoryID==Model.ID))
    {
        <div class="col-sm-4 my-3">
            <div class="card">
                <img src="@item.ImageUrlSmall" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-center">@item.Name</h5>
                    <p class="card-text text-center">@item.UnitPrice TL</p>
                    <a href="~/Product/Details/@item.ID" class="btn btn-primary">SATIN AL</a>
                </div>
            </div>
        </div>
    }
</div>

