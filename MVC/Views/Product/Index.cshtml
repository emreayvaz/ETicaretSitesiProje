@model IEnumerable<DataEntities.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 my-3">
            <div class="card">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrlSmall)" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text text-center">@Html.DisplayFor(modelItem => item.UnitPrice) TL</p>
                    <a href="~/Product/Details/@item.ID" class="btn btn-primary">SATIN AL</a>
                </div>
            </div>
        </div>
    }
</div>

